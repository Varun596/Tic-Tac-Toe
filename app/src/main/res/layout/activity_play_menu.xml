<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.varunelango.tictactoe.PlayMenu"
    android:background="@drawable/background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SINGLE PLAYER"
        android:id="@+id/SingleButton"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:onClick="onClickSinglePlayer"
        android:textSize="25dp"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/TwoPlayerButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 PLAYER"
        android:id="@+id/TwoPlayerButton"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:textSize="25dp"
        android:onClick="onClickTwoPlayer"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/BackButton"
        android:layout_marginTop="64dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:onClick="onClickPlayMenuBack"
        android:background="#FFFFFF"
        android:layout_below="@+id/TwoPlayerButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
